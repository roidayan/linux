 	struct mlx4_en_dev *mdev = priv->mdev;
@@ -405,7 +426,9 @@ static int mlx4_en_vlan_rx_kill_vid(struct net_device *dev, unsigned short vid)
 	}
 	mutex_unlock(&mdev->state_lock);
 
